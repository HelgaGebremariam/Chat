<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBoxNewMessage" HorizontalAlignment="Left" Height="23" Margin="60,207,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="407"/>
        <TextBlock x:Name="textBoxChatMessages" HorizontalAlignment="Left" Margin="60,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="163" Width="407"/>
        <Button x:Name="buttonSendMessage" Content="Send" HorizontalAlignment="Left" Margin="392,261,0,0" VerticalAlignment="Top" Width="75" Click="buttonSendMessage_Click"/>
        <Button x:Name="buttonConnect" Content="Connect" HorizontalAlignment="Left" Margin="100,261,0,0" VerticalAlignment="Top" Width="75" Click="buttonConnect_Click"/>

    </Grid>
</Window>
